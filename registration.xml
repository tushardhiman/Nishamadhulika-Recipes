<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="80dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_marginBottom="2dip"
            android:background="#41870c"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:padding="2dip"
            android:text="@string/registration"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dip"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_more_horiz_white_36dp" />

        <ImageView
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/ornament" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginBottom="2dip"
                    android:background="#6041850c"
                    android:paddingLeft="20dip"
                    android:text="@string/userName"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginBottom="2dip"
                    android:background="#6041850c"
                    android:paddingLeft="20dip"
                    android:text="@string/email"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginBottom="2dip"
                    android:background="#6041850c"
                    android:paddingLeft="20dip"
                    android:text="@string/password"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/retypepassword"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginBottom="2dip"
                    android:background="#6041850c"
                    android:paddingLeft="20dip"
                    android:text="@string/retypepassword"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dip"
                android:orientation="vertical">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:layout_marginBottom="3dip"
                    android:background="@color/greenTirlebackground"
                    android:text="@string/submit"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:background="@color/greenSelected"
                    android:text="@string/cancel"
                    android:textColor="#ffffff"
                    android:textSize="20dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
