<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/main">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <RelativeLayout android:layout_height="250dip"
        android:layout_width="match_parent">

    <!--<FrameLayout-->


    <!--android:id="@+id/frameShare"-->


    <!--android:layout_width="wrap_content"-->


    <!--android:layout_height="80dip"/>-->


    <ImageButton android:layout_height="50dip"
        android:layout_width="50dip"
        android:src="@android:drawable/ic_menu_share"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dip"/>

    <ImageView
        android:layout_height="250dip"
        android:layout_width="match_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/i"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:src="@android:drawable/ic_media_play"
        android:layout_margin="20dip"
        android:layout_alignParentRight="true"/>

</RelativeLayout>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="50dip"
        android:layout_width="match_parent"
        android:id="@+id/ingredients"
        android:layout_marginBottom="2dip"
        android:fontFamily="serif-monospace"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@android:color/white"
        android:text="ingredients"
        android:background="#800000"/>

    <TextView android:layout_height="250dip"
        android:layout_width="match_parent"
        android:id="@+id/ingredientlist"
        android:textSize="15dip"
        android:textColor="@android:color/white"
        android:text="\n Semolina - 1/2 cup (100 grams)\n Curd - 1/2 cup (whisked)\n Oil - 2 tbsp\n Green peas - 1/4 cup\n Cauliflower - 1/4 cup (finely chopped)\n Green chilly 0 1 finely chopped \n Ginger - 1/2 piece (1 tsp paste) \n Salt - 1/2 taste or as per taste \n Mustard seeds - 1/4 tsp \n Curry leaves - 7 to 8 (chopped) \n Baking soda - 1/4 tsp \n " android:background="#800000" android:paddingLeft="50dip"/>

    <TextView
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:id="@+id/procedure_title"
        android:layout_marginBottom="2dip"
        android:fontFamily="serif-monospace"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@android:color/white"
        android:text="procedure_title"
        android:background="#800000"
        android:layout_marginTop="2dip"/>

    <TextView android:layout_height="250dip" android:layout_width="match_parent" android:id="@+id/procedure" android:textSize="15dip" android:textColor="@android:color/white" android:text="Take semolina in a big bowl and mix curd to it. Now add chopped cauliflower, peas, chopped green chilly, ginger paste and salt. Mix everything really well. If the batter appears too thick add some water to it. Cover the batter for 10 to 15 minutes to rest. Then use this batter to make appams. Batter is ready, now mix mustard seeds to it. Take a small pan and heat 1 tsp oil in it. When the oil is rightly hot, splatter mustard seeds first. To it then add curry leaves and saute for a while. Now mix this tempering to the batter. In the end add baking soda to the batter." android:background="#800000" android:textAlignment="center" android:padding="15dip"/>

</LinearLayout>

</LinearLayout>

</ScrollView>